<%= form_with(model:@user, method: :get, local: true) do |f| %>
<h1>ユーザーリスト</h1>
<table>
  <tr>
    <th>ユーザー名</th>
    <th>投稿数</th>
    <th>管理者</th>
  </tr>
    <% @users.each do |t| %>
        <tr>
            <td><%= t.name %></td>
            <td><%= t.tasks.size %></td>
            <td><%= t.admin %></td>
            <td><%= link_to 'ユーザー確認', admin_user_path(t.id) %></td>
            <td><%= link_to 'ユーザー編集', edit_admin_user_path(t.id) %></td>
            <td><%= link_to 'ユーザー削除', admin_user_path(t.id), method: :delete,data: { confirm: '本当に削除していいですか？' } %></td>
        </tr>
    <% end %>
</table>
<% end %>
<br>
<%= link_to 'ユーザー登録', new_admin_user_path%>