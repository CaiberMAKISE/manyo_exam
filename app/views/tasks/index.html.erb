<h1>タスク一覧</h1>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>
<% @tasks.each do |t| %>
  <tr>
    <td><%= t.title %></td>
    <td><%= t.content %></td>
    <td><%= link_to 'タスクを確認する', task_path(t.id) %></td>
    <td><%= link_to 'タスクを編集する', edit_task_path(t.id) %></td>
    <td><%= link_to 'タスクを削除する', task_path(t.id), method: :delete,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>
<br>
<%= link_to 'タスクを登録する', new_task_path%>