<%= form_with(model: @task, local: true) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= @task.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="task_title">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="task_content">
    <%= f.label :content %>
    <%= f.text_field :content %>
  </div>
  <div class="task_dead_line">
    <%= f.label :dead_line %>
    <%= f.date_select :dead_line %>
  </div>
  <div class="task_status">
    <%= f.label :status %>
    <%= f.select :status,
    [['未着手','未着手'], ['着手中','着手中'], ['完了','完了']], {selected: '未着手'} %>
  </div>
  <div class="task_priority">
    <%= f.label :priority %>
    <%= f.select :priority,
    [['低','低'], ['中','中'], ['高','高']], {selected: '低'} %>
  </div>
  <%= f.submit %>
<% end %>
<%= link_to "一覧に戻る", tasks_path %>